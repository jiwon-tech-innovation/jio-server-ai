# AWS Credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-west-2
BEDROCK_REGION=us-west-2

# Server Config
# PORT=8000

# Long-Term Memory (PostgreSQL + pgvector)
# Event Count API uses this database to store event statistics
# (SMARTPHONE_DETECTED, DROWSINESS_DETECTED, GAME_EXECUTED, GAZE_DEVIATION)
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=password
PG_DB=jiaa_memory

# Sensor Fusion (InfluxDB)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=jiaa
INFLUXDB_BUCKET=sensor_data
INFLUXDB_TOKEN=my-token

# Cache (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka (Message Broker)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_AI_INTENT=jiaa.ai.intent

# OpenAI / Groq API Keys (for LLM services)
OPENAI_API_KEY=your-openai-api-key
GROQ_API_KEY=your-groq-api-key
